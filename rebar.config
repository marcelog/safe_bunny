%% -*- mode: erlang -*-
%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 et
{deps_dir, "deps"}.
{deps, [
  {lager, "2.*", {git,"https://github.com/basho/lager.git", "2.0.0"}},
  {emysql, ".*", {git, "https://github.com/Eonblast/Emysql", "2f2878cc8000fb89bfa78ff38f202a1a02220c63"}},
  {worker_pool, ".*", {
    git, "https://github.com/marcelog/worker_pool.git",
    "bd35180cb21886b869436fb353bb4d684e78be1c"
  }},
  {jiffy, ".*", {git, "https://github.com/davisp/jiffy.git", "0.9.0"}},
  {eredis, "1.0.8", {git, "https://github.com/wooga/eredis.git", "v1.0.8"}},
  {amqp_client, ".*", {
    git, "https://github.com/jbrisbin/amqp_client",
    "2b8c2c5a3b647fc4b4733978046305acde611a43"
  }},
  {dk_cxy, ".*", {
    git, "https://github.com/marcelog/dk_cxy.git", "f9790d107e146167f2c2d2f8f6ff4e217f6a0230"
  }},
  {uuid, ".*", {
    git, "https://github.com/avtobiff/erlang-uuid.git", "d7f64acd8412b79e854b8c95f4c66d8e071de8d9"
  }},
  {meck, ".*", {git, "https://github.com/eproxus/meck.git", "0.8.3"}},
  {covertool, ".*", {git, "https://github.com/idubrov/covertool.git", "f624c07ae88bf3cbafd95f82da1fca6d979238bb"}}
]}.
{erl_opts, [
  {parse_transform, lager_transform},
  {lager_truncation_size, 16384},
  {src_dirs, ["src", "test"]},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  warn_untyped_record,
  debug_info
]}.
{xref_warnings, true}.
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
]}.
{ct_extra_params, "-ct_hooks cth_surefire -no_auto_compile -dir ebin -logdir logs/ct -erl_args ${ERL_FLAGS}"}.
{cover_enabled, true}.
